doctype html
html(lang='en')
  head
    title ballena.io
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='Decentralized Finance for Everybody')

    link(rel='stylesheet' href='css/minireset.min.css')
    link(rel='stylesheet' href='css/index.css')
    link(rel='stylesheet' href='https://use.typekit.net/avo8ruz.css' media='nope!' onload='this.media="all"')

    meta(property='og:local' content='en_US')
    meta(property='og:title' content='ballena.io')
    meta(property='og:description' content='Decentralized Finance for Everybody')
    meta(property='og:type' content='website')
    meta(property='og:url' content='https://ballena.io')
    meta(property='og:image' content='https://ballena.io/img/ballena.png')

    meta(link rel="apple-touch-icon" href="https://ballena.io/img/ballena.png")
    meta(name="theme-color" content="#F9F3EB")

  body
    .plains.unselectable
      .plain-left
      .plain-center-bg
      .plain-right
      .plain-center-fg
      .cows

    .container
      .nav.unselectable
        .nav-left
          img.nav-logo(src='/img/ballena.svg')
          a.nav-item(href='#moo!') ballena.io
        .nav-right
          a.nav-item.nav-btn(href='https://app.ballena.io' target="_blank") Launch App

      section
        .hero.unselectable
          .hero-brand
            a.hero-brand-logo(href='https://app.ballena.io' target="_blank")
              img(src='/img/ballena.svg')
            img.hero-brand-name(src='/img/name.svg')
            span.hero-brand-brief Decentralized Finance for Everybody

          .hero-cta
            a.cta(href='https://twitter.com/ballenaio' target='_blank')
              img.cta-img(src='/img/twitter.svg')
              
            a.cta(href='https://medium.com/@ballena' target='_blank')
              img.cta-img(src='/img/medium.svg')
              
            a.cta(href='https://discord.gg/fWwyskse2Z' target='_blank')
              img.cta-img(src='/img/discord.svg')
              
            a.cta(href='https://t.me/stgcrypto' target='_blank')
              img.cta-img(src='/img/telegram.svg')
              
            a.cta(href='https://github.com/ballena-io' target='_blank')
              img.cta-img(src='/img/github.svg')
              
            a.cta(href='https://docs.ballena.io' target='_blank')
              img.cta-img(src='/img/gitbook.svg')

              
    script.
      const cows = document.querySelector('.cows');
      let n = Math.ceil(Math.random() * 3 ) + 3;

      const arr = [];
      for(let i = 0; i < n; i++) {
        const r = 100 / n;
        const x = (i + Math.random() * 0.5) * r;
        const y = Math.ceil(Math.random() * 30) / 10 + 0.5;
        const w = Math.round(Math.random() * 5) + 3;
        const d = Math.random() < 0.5 ? -1 : 1;
        arr.push(`<img class='cow' src='/img/ballena.svg' style='left: ${x}vw; bottom: ${y}rem; width: ${w}rem; transform: scaleX(${d}); z-index: ${Math.ceil(y)}' />`);
      }
      cows.innerHTML = arr.join('');
